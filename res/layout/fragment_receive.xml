<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ProgressBar
		android:id="@+id/receive_fragment_progressbar"
	    style="?android:attr/progressBarStyleLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    />

	<LinearLayout 
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/receive_fragment_content_linearlayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="8dp"
	    android:orientation="vertical"
	    android:visibility="invisible" >
	
	    <TextView
	        android:id="@+id/usd_balance_textview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/usd_balance_zero"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:gravity="center"
	        android:paddingTop="16dp"
	        android:paddingBottom="8dp"
	       	/>
	    
	    
	    <TextView
	        android:id="@+id/hello_receive_fragment_textview"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:gravity="center"
	        android:visibility="invisible"
	        android:text="This will be the receive fragment\nSome long information here\nAnd also a very very long line of information right under this whole thing" />
	    
		<ImageView
	        android:id="@+id/primary_btc_address_qrcode_imageview"
	        android:layout_width="match_parent"
	        android:layout_height="260dp"
	        android:contentDescription="@string/qrcode_desc" />
		
		<TextView
	        android:id="@+id/receive_bitcoin_address_textview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:gravity="center"
	        android:padding="8dp"
	        />
		
		<RelativeLayout
		    android:id="@+id/receive_fragment_buttons_relativelayout"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:orientation="horizontal">

		    <!-- TODO: maybe (?) try to figure out, how to make this match the share button -->		    
		    <Button
		        android:id="@+id/copy_address_to_clipboard_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:text="@string/copy_to_clipboard" />
		    		    
		    <ImageButton
		        android:id="@+id/share_address_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_menu_share"
		        android:layout_toRightOf="@id/copy_address_to_clipboard_button"
		        android:contentDescription="@string/share"
		        />
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>